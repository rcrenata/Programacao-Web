<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Criar Nova Conta</h1>

        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        <form action="/users/create" method="POST">
            <div class="mb-3">
                <label for="fullname" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="fullname" name="fullname" value="{{oldInput.fullname}}" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{oldInput.email}}" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Repetir Senha</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="mb-3">
                <label for="major_id" class="form-label">Curso</label>
                <select class="form-select" id="major_id" name="major_id" required>
                    {{! This is the corrected block }}
                    <option value="" selected disabled>Selecione um curso...</option>
                    {{#each majors}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Criar Conta</button>
            <p class="text-center mt-3">Já tem uma conta? <a href="/users/login">Faça login aqui</a></p>
        </form>
    </div>
</div>