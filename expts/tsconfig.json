{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // Voltamos para o padrão mais compatível
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Garante compatibilidade
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}